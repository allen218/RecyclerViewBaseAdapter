<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    />

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/list_item_header_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/a6"
                app:roundBottomLeft="false"
                app:roundBottomRight="false"
                app:roundWithOverlayColor="#0000ff"
                app:roundedCornerRadius="5dp"
                app:roundingBorderColor="#ff0000"
                app:roundingBorderWidth="1dp" />

            <TextView
                android:id="@+id/list_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/list_item_header_iv"
                android:text="allen"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/list_item_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_name_tv"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/list_item_header_iv"
                android:text="allenwang218@126.com" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>