<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.recyclerviewbaseadapter.progress.CircularProgressBar xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progressBar1"
            android:layout_width="@dimen/common_load_more_progress_size"
            android:layout_height="@dimen/common_load_more_progress_size"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:clickable="false"
            android:indeterminate="true"
            android:indeterminateOnly="false"
            android:visibility="visible"
            app:cpb_colors="@array/gplus_colors" />

        <TextView
            android:id="@+id/not_more_data_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_load_more_progress_size"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="没有更多数据了"
            android:textSize="15sp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>